<?xml version="1.0" encoding="UTF-8"?>
<mime-info xmlns="http://www.freedesktop.org/standards/shared-mime-info">
  <mime-type type="text/rhtml">
    <sub-class-of type="text/html"/>
    <comment>RHTML Template</comment>
    <magic priority="50">
      <match value="&lt;%" type="string" offset="0"/>
    </magic>
    <glob pattern="*.rhtml"/>
    <glob pattern="*.erb"/>
  </mime-type>
  <mime-type type="application/x-ruby">
    <comment>Ruby JavaScript</comment>
    <glob pattern="*.rjs"/>
  </mime-type>
  <mime-type type="application/x-ruby">
    <comment>RubyGems gem specification</comment>
    <glob pattern="*.gemspec"/>
  </mime-type>
  <mime-type type="application/x-ruby">
    <comment>Ruby Rakefile</comment>
    <glob pattern="Rakefile"/>
  </mime-type>
  <mime-type type="application/x-ruby">
    <comment>Bundler Gemfile</comment>
    <glob pattern="Gemfile"/>
  </mime-type>
  <mime-type type="application/x-ruby">
    <comment>Capistrano Deployment File</comment>
    <glob pattern="Capfile"/>
  </mime-type>
  <mime-type type="application/x-ruby">
    <comment>Thor tasks</comment>
    <glob pattern="Thorfile"/>
  </mime-type>
  <mime-type type="application/x-ruby">
    <comment>Thor tasks</comment>
    <glob pattern="*.thor"/>
  </mime-type>
  <mime-type type="application/x-ruby">
    <comment>Rackup File</comment>
    <glob pattern="*.ru"/>
  </mime-type>
  <mime-type type="application/x-ruby">
    <comment>Ruby Rake Task</comment>
    <glob pattern="*.rake"/>
  </mime-type>
  <mime-type type="application/x-ruby">
    <comment>Ruby XML Template</comment>
    <glob pattern="*.rxml"/>
    <glob pattern="*.builder"/>
  </mime-type>
  <mime-type type="application/x-ruby">
    <comment>Ruby API Builder Language template</comment>
    <glob pattern="*.rabl"/>
  </mime-type>
  <mime-type type="text/x-yaml">
    <comment>YAML Ain't Markup Language</comment>
    <glob pattern="*.yml"/>
    <glob pattern="*.yaml"/>
  </mime-type>
  <mime-type type="text/x-cucumber">
    <comment>Cucumber feature plain text file</comment>
    <glob pattern="*.feature"/>
  </mime-type>
</mime-info>

